@model IEnumerable<School_Management_System.Models.tbl_Students>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center" style="color:darkslateblue" >List of Students</h2>

<p>
    @Html.ActionLink("Add New Student", "Create","",new { @class ="btn btn-primary"})
</p>
<table class="table">
    <tr class="bg-info" style="">
        <th>
            @Html.DisplayNameFor(model => model.Registration_No)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Roll_No)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Father_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student_Contact)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Father_Contact)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Class_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Registration_No)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Roll_No)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Student_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Father_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Student_Contact)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Father_Contact)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Class_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
           
            <a href="@Url.Action("Edit", "Students", new { id = item.StudentID })" class="btn btn-sm btn-info" style="background-color: darkslateblue"><i class="glyphicon glyphicon-edit"></i></a>
            <a href="@Url.Action("Delete", "Students", new { id = item.StudentID })" class="btn btn-sm btn-danger"><i class="glyphicon glyphicon-trash"></i></a>
           
            @*@Html.ActionLink("Details", "Details", new { id = item.StudentID }, new { @class = "btn btn-sm btn-info" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.StudentID }, new { @class = "btn btn-sm btn-danger" })*@
        </td>
    </tr>
}

</table>
